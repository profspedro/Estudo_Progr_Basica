programa {/*Ex012 - Programa que solicita o nome completo e fornece apenas a 
primeira palavra do nome independente do número de letras

  Autor: Simão Pedro */
  inclua biblioteca Texto --> txt
  funcao inicio() 
  {
      escreva ("{ EXERCÍCIO 012 - Seu nome } \n")
      cadeia nome
      inteiro x
      escreva ("\nDigite seu nome completo: ")
      leia (nome)
      x = \txt.posicao_texto(" ",nome,0)
      escreva ("\nSeu primeiro nome é: ",(\txt.extrair_subtexto(nome,0,x)),"\n")
  }
}
