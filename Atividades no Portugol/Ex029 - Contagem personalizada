programa { /* Ex029 - Programa que faz contagem personalizada 

            Autor: Simão Pedro*/
  inclua biblioteca Util --> ut
  funcao inicio() {
        inteiro i,f,p
        escreva ("Onde começa a contagem? ")
        leia (i)
        escreva ("Onde termina a contagem? ")
        leia (f)
        escreva ("Qual vai ser o incremento ")
        leia (p)

        inteiro c = 1
        enquanto (c <= f) {
              escreva (c, " ")
              ut.aguarde(500)
              c = c + p 
        }
        escreva ("FIM! \n\n")
  }
}